{
  "name": "Bilal WhatsApp Bot",
  "description": "Deploy Bilal-MD WhatsApp Bot (Private repo clone) on Heroku",
  "repository": "https://github.com/BilalTech05/BILAL-MD",
  "keywords": ["whatsapp", "bot", "heroku"],
  "env": {
    "PRIVATE_REPO_TOKEN": {
      "description": "Enter your GitHub Personal Access Token with repo scope",
      "required": true
    },
    "SESSION_ID": {
      "description": "Enter your WhatsApp Session ID",
      "required": true
    },
    "BOT_NUMBER": {
      "description": "Enter your Bot WhatsApp Number with country code (e.g. 923001234567)",
      "required": true
    },
    "PREFIX": {
      "description": "Enter your bot command prefix (default: .)",
      "required": false
    },
    "OWNER_NAME": {
      "description": "Enter Owner Name",
      "required": false
    },
    "BOT_NAME": {
      "description": "Enter Bot Name",
      "required": false
    },
    "AUTO_STATUS_VIEW": {
      "description": "Enable auto status view? (true/false)",
      "required": false
    },
    "ALWAYS_ONLINE": {
      "description": "Keep bot always online? (true/false)",
      "required": false
    }
  },
  "scripts": {
    "postdeploy": "npm install && npm start"
  }
}
